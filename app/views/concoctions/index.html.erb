<section class="header">
  <h1>Concoctions</h1>

  <table class="u-full-width">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @concoctions.each do |concoction| %>
        <tr>
          <td><%= concoction.name %>
          <td><%= link_to 'Show', concoction %></td>
          <td><%= link_to 'Edit', edit_concoction_path(concoction) %></td>
          <td><%= link_to 'Destroy', concoction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Concoction', new_concoction_path, class: 'button' %>
</section>
