<section id="recipes">
  <p id="notice"><%= notice %></p>

  <h1 class="header">Recipes</h1>

  <table class="u-full-width">
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= link_to 'Show', recipe, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe), class: 'button' %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </table>

  <%= link_to 'New Recipe', new_recipe_path, class: 'button' %>
</section>
